state = global.NPCstates[0];
switch (state){
    case 0: 
        //corrupt
        iscorrupt = 1;
        break;
    case 1:
        //cured
        iscorrupt = 0;
        break;
    case 2:
        //dead
        instance_destroy();
        break;
}

//checks if MC is around obj
