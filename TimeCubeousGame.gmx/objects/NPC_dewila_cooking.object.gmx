          <argument>
            <kind>1</kind>
            <string>/// Controls talking.

//first makes sure the flag is on, if not dewila cant be in the kitchen
if (!global.dewilaflag1){
    instance_destroy();
}

//checks if MC is around NPC
if(collision_circle(x, y, 90, game_player, false, true) &gt; 0)
{ //if we wanna talk to her
    if(keyboard_check_released(vk_space)) {
    
        //if (state_stepFuncOK(global.wState)) {global.wState = state_toggleStepFunc(global.wState);}
        //if we wanna talk to her we want to make sure she's not talking already
        //or anyone else for that matter
        // global.wState[objStateID]
        if (state_stepFuncOK(global.wState) &amp;&amp; !instance_exists(game_textbox) &amp;&amp; (justSpoke == 0))
        {
            //sends data to npc script
            if (iscorrupt) {
                //corrupt npc
                scr_NPC_speak(NPC_name, ctimesspokento, iscorrupt);
                //corrupt times spoken to
                switch (timesspokento)
                {
                    //there's only one corrupt dialogue so far for this guy
                    case 0:
                        enddialogue = 1;
                        break;
                }
            } else {
                //not corrupt npc
                
                //we run a check if the quest is complete after being
                //triggered
                if (global.questFlags[0] == 1 &amp;&amp; timesspokento == 1){
                    sum = 0;
                    for (i=0; i&lt;11; i++){
                        sum += global.foodFlags[i];
                    }
                    if (!sum){
                        //all are zero, we can proceed
                        timesspokento = 2;
                    }
                }
                //and run the script
                scr_NPC_speak(NPC_name, timesspokento, iscorrupt);
                
                //noncorrupt times spoken to
                switch (timesspokento)
                {
                    case 0:
                        //activates food quest
                        global.questFlags[0] = 1; 
                        break;
                    
                    case 1: enddialogue = 1;
                        break;
                        
                    case 2: 
                        enddialogue = 0;
                        break;
                    case 3:
                        //mom stops cooking
                        sprite_index = spr_razimom_stand_down;
                        break;
                    case 4:
                        //quest flag for asynchrony people
                        global.questFlags[1] = 1;
                        break;
                    case 5: 
                        enddialogue = 1;
                        break;
                        
                    /*case 6: enddialogue = 1;
                        break;   */   
                }
            }
            //halts dialogue autostart by pressing space and destroying the tbox
            //without this it will bring up the tbox again
            justSpoke = 20; 
            
            //corrupt times spoken to
            if (!enddialogue)
            {
                timesspokento++;
            }  
        }//end check to see if you can talk to her
    }//end spacebar check
}//end circle check

//checking if she is corrupt to change her sprite
if (iscorrupt)
{
    image_blend = c_red;
}

//ensures the normal sprite plays if the timesspokento is right
if (timesspokento &gt; 3){
    sprite_index = spr_razimom_stand_down;
}

global.dewilaspoke = timesspokento;
</string>
